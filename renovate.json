{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Prague",
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "groupName": "docker references",
      "groupSlug": "docker-refs",
      "pinDigests": true,
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeType": "pr",
      "automergeSchedule": ["0 2 * * 6"]
    },
    {
      "matchCategories": ["ci"],
      "groupName": "ci references",
      "groupSlug": "ci-refs",
      "pinDigests": true,
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeType": "pr",
      "commitBody": "[skip ci]"
    }
  ]
}
