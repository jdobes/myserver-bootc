{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Prague",
  "packageRules": [
    {
      "matchCategories": ["docker", "ci"],
      "groupName": "references",
      "groupSlug": "references",
      "pinDigests": true,
      "automerge": true,
      "automergeStrategy": "rebase",
      "automergeType": "pr",
      "automergeSchedule": ["* 4 * * 6"],
      "platformAutomerge": false,
    }
  ]
}
